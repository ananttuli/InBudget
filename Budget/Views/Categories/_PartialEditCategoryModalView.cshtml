@model UpsertCategoryViewModel


@if (Model.Category is null)
{
    <h3>Not Found</h3>
}
else
{
    <form id="update-category-form" action="/Home/UpdateCategory" method="post" onsubmit="updateCategory(event)">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Category!.Id"/>
        <div class="row">
            <partial name="_PartialUpsertCategoryDetails" for="@Model"/>


            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button id="update-category-button" type="submit" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </form>
}